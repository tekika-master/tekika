<% if @reviews.present? %>
  <% @reviews.each do |review| %>


      <li class="reviews-user-all">
        <p class="review-user-font text-secondary">評価者</p>

        <p class="review-user-name"><%= link_to review.user.name, review.user%></p>
      </li>
    <div class="row well col-md-4">
      <li class="review-content-all">
        <p class="review-content-font text-secondary"></p>
        <div class="review-content">
          <span class="text-muted"><%= review.created_at.strftime("%Y年%m月%d日") %></span>
          <p>評価：<%= review.feeling %> </p>
          <p><%= review.content %></p>
        </div>
      </li>
      <li class="review-product-all">
        <p class="review-product-font text-secondary">購入商品</p>
        <%= link_to review.product do %>
          <div class="">
            <%= image_tag(review.product.image_url,class:'review-product-image', width: '70px')%>
            <p class="review-product-name"><%=  review.product.title %></p>
          </div>
        <% end %>
      </li>

    </div>
  <% end %>
<% end %>
