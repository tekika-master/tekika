<%= form_for (@review) do |f| %>
<%= hidden_field_tag :product_id, product.id %>

<div class="stars text-center col-md-4">
  <h1>評価</h1>
  <ul class="star pl-0">
    <li>😊</li>
    <li>🙂</li>
    <li>😨</li>
  </ul>
  <ul class="star-number pl-0">
    <label for="good"><%= f.radio_button :feeling, "good" %></label>
    <label for="normal"><%= f.radio_button :feeling, "normal" %></label>
    <label for="bad"><%= f.radio_button :feeling, "bad" %></label>
  </ul>

</div>



  <div class="form-group row">
    <%= f.label :content, 'コメント ', class:'name col-md-3 col-form-label' %>
    <div class="col-md-9">
      <%= f.text_area :content, class: "form-control", rows: "8",
        placeholder:'コメントがなくても、評価のみで投稿できます。' %>
    </div>
  </div>
  <div class="form-group row justify-content-end">
    <div class="col-md-9">
      <%= f.submit '投稿する', :style=>"color:white;", class:"review_post btn btn-warning btn_star" %>
    </div>
  </div>

<% end %>
