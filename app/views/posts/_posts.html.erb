 <% posts.each do |post| %>
 <div class="col-md-3 text-center">
      <div id="item-list">
       <div class="item-list">
         <%= link_to image_path post.image  do %>
           <li>	<%= image_tag(post.image.to_s, class:'image',:size => '180x180') %></li>
         <% end %>
         <li class="post-name"><%= post.problem %></li>
         <li class="post-year"><%= post.year %><h9>å¹´</h9></li>
       </div>
      </div>
  </div>
  <% end %>
  <%= paginate @posts %>
</div>
