<div class="text-center">
	<h1>ログイン</h1>
</div>
<div class="row">
	<div class="col-sm-6 offset-sm-3">
		<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
			<div class="form-group">
				<%= f.label :email, 'Email（Email of Keio University）' %>
				<%= f.email_field :email, class:'form-control',placeholder:"taro@keio.jp" %>
			</div>
			<div class="form-group">
				<%= f.label :password, 'password' %>
				<%= f.password_field :password, class: 'form-control' %>
			</div>
		<%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
		<% end %>
	</div>
</div>
		<p class="new-register text-center">アカウントをお持ちでない方はこちら
			<%= link_to '新規登録', signup_path %>
		</p>
